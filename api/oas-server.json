{
  "openapi": "3.1.0",
  "info": {
    "title": "go-diploma-1",
    "version": "0.0.1"
  },
  "paths": {
    "/api/user/register": {
      "post": {
        "operationId": "RegisterUser",
        "description": "User registration",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/User"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "headers": {
              "Authorization": {
                "schema": {
                  "type": "string"
                }
              }
            }
          },
          "400": {
            "description": "Bad Request"
          },
          "409": {
            "description": "Conflict"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/api/user/login": {
      "post": {
        "operationId": "LoginUser",
        "description": "User login",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/User"
              }
            }
          }
        },
        "responses": {
          "200": {
            "headers": {
              "Authorization": {
                "schema": {
                  "type": "string"
                }
              }
            },
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/api/user/orders": {
      "post": {
        "operationId": "CreateOrder",
        "security": [
          {
            "BearerAuth": [
            ]
          }
        ],
        "description": "Create order",
        "requestBody": {
          "required": true,
          "content": {
            "text/plain": {
              "schema": {
                "type": "string"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Already loaded"
          },
          "202": {
            "description": "Order is accepted for processing"
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "409": {
            "description": "Order already uploaded by another user"
          },
          "422": {
            "description": "Unprocessable Entity"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "get": {
        "operationId": "GetOrders",
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "description": "Get orders",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Order"
                  }
                }
              }
            }
          },
          "204": {
            "description": "No Content"
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/api/user/balance": {
      "get": {
        "operationId": "GetBalance",
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "description": "Get balance",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "required": [
                    "current",
                    "withdrawn"
                  ],
                  "properties": {
                    "current": {
                      "type": "number",
                      "format": "float"
                    },
                    "withdrawn": {
                      "type": "number",
                      "format": "float"
                    }
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/api/user/balance/withdraw": {
      "post": {
        "operationId": "Withdraw",
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "description": "Withdraw balance",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "required": [
                  "order",
                  "sum"
                ],
                "properties": {
                  "order": {
                    "type": "string"
                  },
                  "sum": {
                    "type": "number",
                    "format": "float"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          },
          "401": {
            "description": "Unauthorized"
          },
          "402": {
            "description": "Balance is not enough"
          },
          "422": {
            "description": "Incorrect order"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/api/user/withdrawals": {
      "get": {
        "operationId": "GetWithdrawals",
        "security": [
          {
            "BearerAuth": []
          }
        ],
        "description": "Get withdrawals",
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Withdrawal"
                  }
                }
              }
            }
          },
          "204": {
            "description": "No Content"
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    }
  },
  "components": {
    "parameters": {
      "AuthorizationHeader": {
        "name": "Authorization",
        "in": "header",
        "required": true,
        "schema": {
          "type": "string"
        }
      }
    },
    "schemas": {
      "User": {
        "type": "object",
        "required": [
          "login",
          "password"
        ],
        "properties": {
          "login": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        }
      },
      "Order": {
        "type": "object",
        "required": [
          "number",
          "status",
          "uploaded_at"
        ],
        "properties": {
          "number": {
            "type": "string"
          },
          "status": {
            "type": "string",
            "enum": [
              "NEW",
              "PROCESSING",
              "INVALID",
              "PROCESSED"
            ]
          },
          "accrual": {
            "type": "number",
            "format": "float"
          },
          "uploaded_at": {
            "type": "string"
          }
        }
      },
      "Withdrawal": {
        "type": "object",
        "required": [
          "order",
          "sum",
          "processed_at"
        ],
        "properties": {
          "order": {
            "type": "string"
          },
          "sum": {
            "type": "number",
            "format": "float"
          },
          "processed_at": {
            "type": "string"
          }
        }
      }
    },
    "securitySchemes": {
      "BearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
